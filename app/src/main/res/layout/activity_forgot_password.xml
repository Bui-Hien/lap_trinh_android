<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPasswordActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="64dp"
        app:cardCornerRadius="999dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_transparent"
            android:scaleType="centerCrop"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/baseline_account_circle_gray_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>




    <TextView
        android:id="@+id/tvForgotPasswordName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text=""
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/tvQuestionSecurityOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotPasswordName" />

    <TextView
        android:id="@+id/tvQuestionSecurityThird"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/edtAnswersSecond"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/edtAnswersSecond"
        app:layout_constraintTop_toBottomOf="@+id/edtAnswersSecond" />

    <TextView
        android:id="@+id/tvQuestionSecuritySecond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/edtAnswerOne"
        app:layout_constraintStart_toStartOf="@+id/edtAnswerOne"
        app:layout_constraintTop_toBottomOf="@+id/edtAnswerOne" />

    <EditText
        android:id="@+id/edtAnswerOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Câu trả lời"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tvQuestionSecurityOne"
        app:layout_constraintStart_toStartOf="@+id/tvQuestionSecurityOne"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionSecurityOne" />

    <EditText
        android:id="@+id/edtAnswersSecond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Câu trả lời"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/tvQuestionSecuritySecond"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/tvQuestionSecuritySecond"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionSecuritySecond" />

    <EditText
        android:id="@+id/edtAnswerThird"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Câu trả lời"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/tvQuestionSecurityThird"
        app:layout_constraintStart_toStartOf="@+id/tvQuestionSecurityThird"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionSecurityThird" />

    <Button
        android:id="@+id/btnNextForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@color/color_primary"
        android:text="Tiếp theo"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>